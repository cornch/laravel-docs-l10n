"{\n"
"    /**\n"
"     * Determine if the given post can be updated by the user.\n"
"     *\n"
"     * @param  \\App\\Models\\User  $user\n"
"     * @param  \\App\\Models\\Post  $post\n"
"     * @return bool\n"
"     */\n"
"    public function update(?User $user, Post $post)\n"
"    {\n"
