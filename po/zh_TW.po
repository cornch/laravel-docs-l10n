"        $this->performTask($user);\n"
msgstr ""

#. type: Plain text
#: docs/8.x/artisan.md:474 docs/master/artisan.md:470
#, no-wrap
msgid "        $bar->advance();\n"
"    }\n"
msgstr ""

#. type: Plain text
#: docs/8.x/artisan.md:476 docs/master/artisan.md:472
#, no-wrap
msgid "    $bar->finish();\n"
msgstr ""

#. type: Plain text
#: docs/8.x/artisan.md:478 docs/master/artisan.md:474
