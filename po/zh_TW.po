"         * @param  string  $siteName\n"
"         * @param  string  $uri\n"
"         * @return string\n"
"         */\n"
"        public function frontControllerPath($sitePath, $siteName, $uri)\n"
"        {\n"
"            return $sitePath.'/public_html/index.php';\n"
"        }\n"
"    }\n"
msgstr ""

