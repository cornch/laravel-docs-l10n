"        if (! $request->hasValidSignature()) {\n"
"            abort(401);\n"
"        }\n"
msgstr "    Route::get('/unsubscribe/{user}', function (Request $request) {\n"
"        if (! $request->hasValidSignature()) {\n"
"            abort(401);\n"
"        }\n"

