#, no-wrap
msgid "    $collection = collect([1, 2, 3, 4, 5, 6]);\n"
msgstr ""

#. type: Plain text
#: docs/8.x/collections.md:1481 docs/master/collections.md:1477
#, no-wrap
msgid "    list($underThree, $equalOrAboveThree) = $collection->partition(function ($i) {\n"
"        return $i < 3;\n"
"    });\n"
