"{\n"
"    /**\n"
"     * Show the profile for the given user.\n"
"     */\n"
"    public function show(Request $request, string $id): View\n"
"    {\n"
"        $value = $request->session()->get('key');\n\n"
"        // ...\n\n"
"        $user = $this->users->find($id);\n\n"
"        return view('user.profile', ['user' => $user]);\n"
"    }\n"
"}"
