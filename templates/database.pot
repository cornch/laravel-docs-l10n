# File: docs/master/database.md, line: 95
#, no-wrap
msgid ""
"    'mysql' => [\n"
"        'read' => [\n"
"            'host' => [\n"
"                '192.168.1.1',\n"
"                '196.168.1.2',\n"
"            ],\n"
"        ],\n"
"        'write' => [\n"
"            'host' => [\n"
"                '196.168.1.3',\n"
"            ],\n"
"        ],\n"
"        'sticky' => true,\n"
"        'driver' => 'mysql',\n"
"        'database' => 'database',\n"
"        'username' => 'root',\n"
"        'password' => '',\n"
"        'charset' => 'utf8mb4',\n"
"        'collation' => 'utf8mb4_unicode_ci',\n"
"        'prefix' => '',\n"
"    ],\n"
msgstr ""
