#: ./docs/11.x/reverb.md:57
#: ./docs/master/reverb.md:56
msgctxt "CODE: php"
msgid "'apps' => [\n"
"    [\n"
"        'id' => 'my-app-id',\n"
"        'allowed_origins' => ['laravel.com'],\n"
"        // ...\n"
"    ]\n"
"]"
msgstr ""

#: ./docs/master/reverb.md:73
