"\n"
"$tables = Schema::getTables();\n"
"$views = Schema::getViews();\n"
"$columns = Schema::getColumns('users');\n"
"$indexes = Schema::getIndexes('users');\n"
"$foreignKeys = Schema::getForeignKeys('users');"
