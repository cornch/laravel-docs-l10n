#
#. type: Plain text
# File: docs/8.x/blade.md, line: 766
# File: docs/master/blade.md, line: 767
#, no-wrap
msgid ""
"<div class=\"alert alert-error mb-4\">\n"
"    <!-- Contents of the $message variable -->\n"
"</div>\n"
msgstr ""
#
