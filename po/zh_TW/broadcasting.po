"    .joining((user) => {\n"
"        console.log(user.name);\n"
"    })\n"
"    .leaving((user) => {\n"
"        console.log(user.name);\n"
"    })\n"
"    .error((error) => {\n"
"        console.error(error);\n"
"    });"
msgstr ""

