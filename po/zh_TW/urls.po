msgid ""
"echo $url = url()->query('/posts', ['columns' => ['title', 'body']]);\n"
"\n"
"// http://example.com/posts?columns%5B0%5D=title&columns%5B1%5D=body\n"
"\n"
"echo urldecode($url);\n"
"\n"
"// http://example.com/posts?columns[0]=title&columns[1]=body"
