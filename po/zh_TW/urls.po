msgid ""
"echo url()->query('/posts', ['search' => 'Laravel']);\n"
"\n"
"// https://example.com/posts?search=Laravel\n"
"\n"
"echo url()->query('/posts?sort=latest', ['search' => 'Laravel']);\n"
"\n"
