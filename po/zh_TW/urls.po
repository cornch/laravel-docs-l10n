"     * @return void\n"
"     */\n"
"    public function register()\n"
"    {\n"
"        $this->renderable(function (InvalidSignatureException $e) {\n"
"            return response()->view('error.link-expired', [], 403);\n"
"        });\n"
"    }\n"
