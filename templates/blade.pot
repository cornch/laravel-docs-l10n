#
#. type: Plain text
# File: docs/8.x/blade.md, line: 188
# File: docs/master/blade.md, line: 189
#, no-wrap
msgid ""
"    @isset($records)\n"
"        // $records is defined and is not null...\n"
"    @endisset\n"
msgstr ""
#
#. type: Plain text
# File: docs/8.x/blade.md, line: 192
# File: docs/master/blade.md, line: 193
#, no-wrap
msgid ""
"    @empty($records)\n"
"        // $records is \"empty\"...\n"
"    @endempty\n"
msgstr ""
