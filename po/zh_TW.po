msgid "Finally, you may reference this provider in your `guards` configuration:"
msgstr ""

#. type: Plain text
#: docs/8.x/authentication.md:622 docs/master/authentication.md:622
#, no-wrap
msgid "    'guards' => [\n"
"        'web' => [\n"
"            'driver' => 'session',\n"
"            'provider' => 'users',\n"
"        ],\n"
"    ],\n"
