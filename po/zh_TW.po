#. type: Plain text
#: docs/8.x/routing.md:640 docs/master/routing.md:639
#, no-wrap
msgid "    <form action=\"/example\" method=\"POST\">\n"
"        @method('PUT')\n"
"        @csrf\n"
"    </form>\n"
msgstr ""

