#: ./docs/master/blade.md:739
msgctxt "CODE"
msgid ""
"use Illuminate\\Support\\Str;\n"
"\n"
"/**\n"
" * Whether the component should be rendered\n"
" */\n"
"public function shouldRender(): bool\n"
"{\n"
"    return Str::length($this->message) > 0;\n"
"}"
