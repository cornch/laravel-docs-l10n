msgid ""
"@servers(['web-1' => '192.168.1.1', 'web-2' => '192.168.1.2'])\n"
"\n"
"@task('deploy', ['on' => ['web-1', 'web-2']])\n"
"    cd /home/user/example.com\n"
"    git pull origin {{ $branch }}\n"
"    php artisan migrate --force\n"
"@endtask"
